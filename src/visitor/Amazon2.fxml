<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visitor.Amazon2Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="699.0" prefWidth="900.0">
         <children>
            <HBox prefHeight="40.0" prefWidth="900.0">
               <children>
                  <Label prefHeight="40.0" prefWidth="200.0" text="Welcome">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
                  <Pane prefHeight="200.0" prefWidth="500.0" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <MenuButton alignment="TOP_LEFT" mnemonicParsing="false" text="Switch User">
                          <items>
                              <MenuItem fx:id="basicUserButton" mnemonicParsing="false" text="Basic User" />
                            <MenuItem fx:id="primeUserButton" mnemonicParsing="false" text="Prime User" />
                            <MenuItem fx:id="distributorButton" mnemonicParsing="false" text="Distributor" />
                          </items>
                        </MenuButton>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
            <VBox fx:id="mainDisplay" prefHeight="660.0" prefWidth="900.0" />
         </children>
      </VBox>
   </children>
